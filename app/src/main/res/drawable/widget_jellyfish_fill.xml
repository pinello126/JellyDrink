<?xml version="1.0" encoding="utf-8"?>
<!-- Riempimento acqua per la medusa (clipdrawable) -->
<clip xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipOrientation="vertical"
    android:gravity="bottom">

    <shape android:shape="rectangle">
        <!-- Gradiente acqua azzurra -->
        <gradient
            android:angle="90"
            android:startColor="#80A8F0FF"
            android:centerColor="#8068D8F0"
            android:endColor="#8028A8D0"
            android:type="linear" />
    </shape>

</clip>
